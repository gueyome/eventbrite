<div class="container">
  <div class ="row">
    <div class = "col-md-6 offset-md-3">
      <br><br><br>

      <h1 class="h3 mb-3 font-weight-normal text-center">Liste des invités de l'évènement - <%= @event.title%></h1>

      <ul class="list-group">
        <% @event.users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= user.first_name%>
        </li>
        <% end %>
      </ul>

      <div class="text-center mt-5">
        <%= link_to "Modifier mon évènement", edit_event_path(@event.id), class: "btn btn-md btn-primary" %>          
      </div>
