<div class="container">
  <div class="text-center mt-3">
  <h1>Profil de <%= @user.first_name %></h1>
  </div>
  <div class="row my-2">
    <div class="col-lg-8 order-lg-2">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a href data-target="#profile" data-toggle="tab" class="nav-link active">Profil</a>
        </li>
        <li class="nav-item">
          <a href data-target="#event" data-toggle="tab" class="nav-link">Ses évènements</a>
        </li>
        <li class="nav-item">
          <a href data-target="#edit" data-toggle="tab" class="nav-link">Editer mon profil</a>
        </li>
        <li class="nav-item">
          <%= link_to "Modifier mon email/mot de passe", edit_user_registration_path, class: "nav-link" %>
        </li>
      </ul>
    <div class="tab-content py-4">
      <div class="tab-pane active" id="profile">
        <h5 class="mb-3">Profil de l'utilisateur</h5>
        <div class="row">
          <div class="col-md-6">
            <h6>Prénom</h6>
            <p>
              <%= @user.first_name %>
            </p>
            <h6>Nom de famille </h6>
            <p>
              <%= @user.last_name %>
            </p>
            <h6>Description </h6>
            <p>
              <%= @user.description %>
            </p>
            <h6>Email </h6>
            <p>
              <%= @user.email %>
            </p>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="event">
        <ul class="list-group list-group-flush">
          <% @user.events_hosted.each do |event|%>
          <li class="list-group-item"> <%= link_to "#{event.title}", event_path(event.id) %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

